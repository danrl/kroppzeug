    Hostname                foobar.example.com
    User                    root
    Port                    2020
    #kroppzeug_description  cloud in foobar town
    #kroppzeug_update       apt-get update; apt-get dist-upgrade; apt-get autoremove; apt-get clean
    #kroppzeug_autocmd      tmux attach || tmux
    #kroppzeug_managed      true


